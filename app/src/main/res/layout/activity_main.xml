<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity" android:id="@+id/main">
    <TableLayout
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:id="@+id/MainTable"
    >

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="@string/textSelectSource"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/heading"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless"

                    android:onClick="onRadioButtonSettingsClicked" android:textAlignment="center"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/Settings"
                  android:visibility="visible">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/layoutDataSource">

                    <RadioGroup
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/radioGroup" android:layout_width="wrap_content"
                            android:paddingTop="8dp">

                        <TextView
                                android:text="Data source "
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content" android:id="@+id/textView2"/>
                        <RadioButton android:id="@+id/radio_http"
                                     android:text="@string/http"
                                     android:onClick="onRadioButtonDataSourceClicked"
                                     android:checked="true"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content" android:textSize="12sp"/>
                        <RadioButton android:id="@+id/radio_bluetooth"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content" android:textSize="12sp"
                                     android:text="@string/bluetooth"
                                     android:onClick="onRadioButtonDataSourceClicked"/>
                        <RadioButton android:id="@+id/radio_random"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content" android:textSize="12sp"
                                     android:text="@string/random"
                                     android:onClick="onRadioButtonDataSourceClicked" android:checked="true"/>
                    </RadioGroup>
                    <EditText
                            android:layout_height="47dp"
                            android:inputType="textUri"
                            android:text="@string/defaultServer"
                            android:ems="10"
                            android:id="@+id/serverAddress"
                            android:visibility="invisible" android:hint="@string/hintHttpAddress"
                            android:textSize="12sp"
                            android:layout_width="213dp" android:selectAllOnFocus="true" android:singleLine="true"
                            android:layout_toEndOf="@+id/radioGroup"
                    />

                    <Button
                            android:text="@string/textOK"
                            android:id="@+id/serverButton"
                            style="@style/Widget.AppCompat.Button.Small"
                            android:onClick="onButtonClicked"
                            android:textSize="12sp"
                            android:visibility="invisible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_toEndOf="@+id/serverAddress"
                    />
                </RelativeLayout>
                <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layoutDataSource"
                        android:id="@+id/radioGroupGraph"
                        android:checkedButton="@+id/radioGraph"
                        android:visibility="visible">
                    <TextView
                            android:text="@string/TextDisplayValues"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" android:paddingEnd="10dp"/>
                    <RadioButton
                            android:text="Graph"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioGraph"
                            android:layout_weight="1"
                            android:onClick="onRadioButtonViewClicked"
                    />
                    <RadioButton
                            android:text="Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioText"
                            android:layout_weight="1"
                            android:onClick="onRadioButtonViewClicked"/>
                </RadioGroup>


                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/relativeLayoutFormat"
                        android:layout_below="@+id/layoutDataSource"
                        android:layout_toEndOf="@+id/radioGroupGraph">
                    <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioGroupFormat">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textDataFormat"
                                android:layout_weight="1"
                                android:text="Data format "/>
                        <RadioButton
                                android:text="JSON"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/radioButtonFormatJson"
                                android:layout_weight="1"
                                android:checked="true"/>
                        <RadioButton
                                android:text="@string/textDelimited"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/radioButtonFormatDelimited"
                                android:layout_weight="1"/>

                    </RadioGroup>
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="@string/defaultDelimiter"
                            android:ems="10"
                            android:id="@+id/textDelimiter" android:layout_weight="1"
                            android:layout_alignBottom="@+id/radioGroupFormat"
                            android:layout_toEndOf="@+id/radioGroupFormat"/>
                </RelativeLayout>
            </RelativeLayout>
        </TableRow>



        <WebView
                android:layout_width="match_parent"
                android:visibility="visible"
                android:id="@+id/webView"
                android:layout_height="fill_parent">

        </WebView>
        <TableLayout
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:id="@+id/tableMeasurements"
        >
        </TableLayout>
        <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"/>

    </TableLayout>



</RelativeLayout>